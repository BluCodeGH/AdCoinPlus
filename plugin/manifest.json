{
  "name": "Add Coin Plus",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Use your spare CPU for donating money to non-profits",
  "homepage_url": "http://google.com",
  "icons": {
    "16": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/coinhive.min.js",
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/logo.png",
    "default_title": "browser action demo",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "idle",
    "notifications"
  ]
}
